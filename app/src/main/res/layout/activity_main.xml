<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="60dp"
            android:text="Microsoft Teams"
            android:textColor="#009688"
            android:textSize="34sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="200dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logoo">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:text="Get Started with your work, school or Personal Microsoft Account"
            android:textColor="#4CAF50"
            android:textSize="17sp"
            tools:visibility="visible" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Enter email, phone, or Skype"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:paddingLeft="10dp"
            android:background="#DBDFDF"/>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="@drawable/custom_button"
            android:text=" Sign in"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="225dp"
            android:layout_height="29dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:paddingLeft="15dp"
            android:text="Get help with signing in"
            android:textColor="#4CAF50"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_but"
            android:text="join_a_meeting"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_but"
            android:drawableLeft="@drawable/signup_mod"
            android:drawablePadding="10dp"
            android:paddingStart="65dp"
            android:paddingEnd="90dp"
            android:text="Sign up for free"
            android:textAllCaps="false" />


    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />
</LinearLayout>